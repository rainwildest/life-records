type Budget {
  id: ID!
  seqId: Int
  userId: String
  expenseId: String
  amounts: Int
  createdAt: Date
  modifiedAt: Date
  deletedAt: Date

  # custom data
  expense: LivingExpenses
}

type BudgetsData {
  data: [Budget]
  total: Int
  hadEdit: Boolean
}

input ModifyBudgetProps {
  expenseId: String
  amounts: Int
}

input BudgetProps {
  date: String
  format: String
}

type Query {
  budgets(input: BudgetProps): BudgetsData
}

type Mutation {
  createBudget(input: ModifyBudgetProps): Budget
  modifyBudget(id: String!, input: ModifyBudgetProps): Budget
  removeBudget(id: String!): Budget
}
