# 消费记录
type CostDetails {
  id: ID!
  seqId: Int
  userId: String
  expenseId: String
  amounts: Int
  remarks: String
  purchaseTime: Date
  createdAt: Date
  modifiedAt: Date
  deletedAt: Date
  bookId: String

  # custom data
  user: User
  expense: LivingExpenses
  book: AccountBooks
}

input CostDetailsOptions {
  userId: String
  bookId: String
}

type Query {
  costDetails(input: CostDetailsOptions): [CostDetails]
}

input CreateCoseOptions {
  expenseId: String!
  amounts: Int!
  remarks: String
  purchaseTime: Date
  bookId: String
}

input ModifyCostOptions {
  amounts: Int
  remarks: String
}

type Mutation {
  createCostDetail(input: CreateCoseOptions): CostDetails
  modifyCostDetail(id: String!, input: ModifyCostOptions): CostDetails
  removeCostDetail(id: String!): CostDetails
}

