# 费用类型
type LivingExpenses {
  id: ID!
  seqId: Int
  userId: String
  expenseIcon: String
  # 收入：income; 支出：pay
  expenseType: String
  expenseName: String
  createdAt: Date
  modifiedAt: Date
  deletedAt: Date

  # custom date
  user: User
}

input CreateLivingExpensesOption {
  expenseType: String!
  expenseName: String!
  isAddUserId: Boolean
}

input ModifyLivingExpensesOption {
  expenseType: String!
  expenseName: String!
}

type Query {
  livingExpenses(type: String): [LivingExpenses]
}

type Mutation {
  createLivingExpenses(input: CreateLivingExpensesOption): LivingExpenses
  modifyLivingExpenses(
    id: String
    input: ModifyLivingExpensesOption
  ): LivingExpenses
  removeLivingExpenses(id: String!): LivingExpenses
}
